<!DOCTYPE html>
 <html lang="pt">

 <head>
    <meta charset="UTF-8">
    <title>Pizzaria</title>
 </head>

 <body>
    <h2>Bem-vindo, <%= usuario.nome %>!</h2>
    <a href="/logout">Sair</a>

    <h3>ğŸ” Buscar Pizza</h3>
    <form method="GET" action="/dashboard">
        <input name="busca" placeholder="Buscar por nome" value="<%= busca %>">
        <button type="submit">Buscar</button>
    </form>

    <h3>ğŸ• Cadastrar Pizza</h3>
        <form method="POST" action="/pizzas">
            <input type="text" name="nome" placeholder="Nome da pizza" required>
            <input type="number" name="preco" step="0.01" placeholder="PreÃ§o" required>
            <input type="number" name="estoque" placeholder="Estoque" value="10">
            <button type="submit">Cadastrar</button>
        </form>

    <h3>ğŸ“„ Pizzas</h3>
        <ul>
            <% pizzas.forEach(pizza => { %>
                <li>
                    <strong>
                        <%= l.nome %>
                    </strong> - R$ <%= l.preco %> (Estoque: <% l.estoque %>)
                        <% if (l.estoque > 5) { %> âš ï¸ <b>Estoque baixo!</b>
                            <% } %>
                            <form method="POST" action="/pizzas/update/<%= l.id %>">
                                <input name="nome" value="<%= l.nome %>" required>
                                <input name="preco" type="number" step="0.01" value="<%= l.preco %>" required>
                                <input name="estoque" type="number" value="<%= l.estoque %>">
                                <button type="submit">Salvar</button>
                            </form>
                            <form method="POST" action="/pizzas/delete/<%= l.id %>">
                                <button type="submit">Excluir</button>  
                            </form>
                </li>
                <% }) %>
        </ul>

    <h3>ğŸ’¸ Registrar Venda</h3>
    <form method="POST" action="/vendas">
        <select name="pizza_id">
            <% pizzas.forEach(pizza => { %>
                <option value="<%= l.id %>">
                    <%= l.nome %>
                </option>
            <% }) %>
        </select>
        <input type="number" name="quantidade" value="1" min="1">
        <button type="submit">Vender</button>
    </form>

    <h3>ğŸ“ˆ Ãšltimas Vendas</h3>
    <ul>
        <% vendas.forEach(v=> { %>
            <li>
                    <%= v.usuario %> vendeu <% v.quantidade %>x <%= v.pizza %> - <%= v.data %>
            </li>
        <% }) %>
    </ul>
</body>

</html>